<Window x:Class="_6._3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_6._3"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <ListBox Grid.Row="0" Margin="10" x:Name="Result">
            
        </ListBox>
        <TextBox Grid.Row="1" Margin="10" x:Name="InputValue"/>
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Content="Add" Width="100" Margin="10" Click="Button_Click"/>
            <Button Content="Remove" Width="100" Margin="10" Click="Button_Click_1"/>
            <Button Content="Delete after '-'" Margin="10" Width="100" Click="Button_Click_2"/>
        </StackPanel>
    </Grid>
</Window>
